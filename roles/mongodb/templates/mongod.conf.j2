storage:
  dbPath: /var/lib/mongodb
  journal:
    enabled: true

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

net:
  bindIp: "127.0.0.1,{{ groups['front'] | map('extract', hostvars, ['ansible_host']) | join(',') }}"
  port: {{ database_port }}

processManagement:
  fork: true
  timeZoneInfo: /usr/share/zoneinfo


