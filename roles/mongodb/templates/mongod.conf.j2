storage:
  dbPath: /var/lib/mongo
  journal:
    enabled: true

systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

net:
  bindIp: "{{ groups['front'] | map('extract', hostvars, ['ansible_host']) | join(',') }}"
  port: "{{ database_port }}"
processManagement:
  timeZoneInfo: /usr/share/zoneinfo


